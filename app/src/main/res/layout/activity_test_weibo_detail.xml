<?xml version="1.0" encoding="utf-8"?>
<com.example.caowj.newtask.widget.headerScrollView.HeaderScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_hover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    app:top_offset="55dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:text="其他部分（这个activity解决了滑动冲突，可以试着滑动看看！）" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AAff0000"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:tag="aaa">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="周边跟团"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="跳"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8e8e8">

    </android.support.v7.widget.RecyclerView>

</com.example.caowj.newtask.widget.headerScrollView.HeaderScrollView>
